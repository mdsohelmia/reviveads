<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href=""?>

<plugin>
    <name>djaxvastOverlayBannerTypeHtml</name>
    <displayName>Vast Video Plugin</displayName>
     <creationDate>2019-01-08</creationDate>
    <author>Revive Adserver Mod</author>
    <authorEmail>info@reviveadservermod.com</authorEmail>
    <authorUrl>https://www.reviveadservermod.com/</authorUrl>
    <license>LICENSE.txt</license>
    <description>Plugin that provides Vast 2.0,Vast 3.0,Vast 4.0 and Vast 4.1 Supported</description>
    <version>1</version>
    <oxversion>3.2.0-beta-rc3</oxversion>
    <extends>bannerTypeHtml</extends>

    <install>
        <files>
            <file path="{MODULEPATH}bannerTypeHtml/djaxvastOverlayBannerTypeHtml/">vastOverlayHtml.class.php</file>
            <file path="{MODULEPATH}bannerTypeHtml/djaxvastOverlayBannerTypeHtml/">vastOverlayHtml.delivery.php</file>
        </files>

        <configuration>
            <!-- only administrator has permissions to change settings in config file -->

        
            <setting key="isVastOverlayAsImageEnabled" type="checkbox" label="Allow overlay video banners to be defined as an Image" required="0" size="1" visible="1">1</setting>

        
        </configuration>

    </install>

</plugin>
